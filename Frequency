public class Checkword{
	public static void main(String[]args){
		char[] ramdonlet={'b' ,'c' ,'d' ,'e' ,'f'};
		String word= "ddddeeebbbceeffffpslkkkdls";
		checkword(word,ramdonlet);
		
		
		}
		
		
public static void checkword(String word, char[] randomlet) {
	char[] Wordletters=word.toCharArray();
	int cnt=0;
	int[] count= Frequency(Wordletters,randomlet);
	
	for (int k=0;k<count.length;k++){
		System.out.print(count[k]);
		if (count[k]==0){
			System.out.println("Not all letters used");
		}
		cnt=cnt+count[k];
	}
	if (cnt==0){
		System.out.println("None of the letters are used");
		}
}//checks if all letters are present atleast once 



public static int[] Frequency(char[] Wordletters,char[] randomlet){
	int[] Countarray=new int[randomlet.length];

	
	for (int i=0;i< randomlet.length;i++) {
		for(int j=0;j< Wordletters.length;j++)
		if (randomlet[i]==Wordletters[j]){
			Countarray[i]=Countarray[i]+1;
			
			
		}

	}
	
	return Countarray;
}//creates a histrogram which checks the frequancy of letters
}
